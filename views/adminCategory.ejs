<%- include('partials/headerNavbarAdmin.ejs') %>
<div class='container pt-3' >
    <h1>Manage Category</h1>
    <hr>
    <form action='/admin/category/add' method="post" enctype="multipart/form-data">
      <div class='row'>
        <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 mb-3">
            <label class="form-label">Category</label>
            <input type="text" class="form-control" name="category[category]" placeholder="Category">
        </div>
        <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 mb-3">
          <label class="form-label">Image</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>
      </div>
        <button type='submit' class='btn btn-primary'>Add new category</button>
    </form>
    <div class="album pb-4 mt-4">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-6 g-3">
          <% category.forEach((type) => { %>
            <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-12">
                <a href='/category/<%= type.category %>' class="card shadow-sm text-center justify-contents-center" style="border-radius: 20px;;">
                  <div class="category">
                    <img src="<%= type.image %>" style="width:100%; height: 200px; border-radius: 20px;">
                    <div class="bottom-left text-uppercase"><%= type.category %></div>
                  </div>
                </a>
                <div class='text-center mt-2'>
                  <form onsubmit="if(!confirm('Are you sure?')){return false;}" action='/admin/category/delete/<%= type.id %>' method="post">
                      <button type='submit' class='btn btn-danger'>Delete</button>
                  </form>
                </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
