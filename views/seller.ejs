<%- include('partials/header/world.ejs') %>

<div class="block">
  <div class="row underline" style="justify-content: space-between;">
    <h1>Your Shop</h1>
    <a href='/seller/new' class="badd" style='font-size: 2rem;'>Add new product</a>
  </div>
  <div class="row overflowY">
      <% if(item.length == 0){ %>
        <h3 style="margin: auto; margin-top: 2rem">No item in your shop</h3>
      <% } else { %>
            <div id='myUL' class="row">
              <% item.forEach((item) => { %>
                <% var avgRating; %>
                <% if(item.comments.length == 0){ %>
                <%  avgRating = 0; %>                                                  
                <% }else{ var i = 0,j= item.comments.length; %>
                  <% item.comments.forEach(function(comment){ %>
                    <% if(typeof(comment.rating) == 'undefined') { %>
                    <% j-- %>
                    <% } else { %>
                      <% i = i + comment.rating %>
                    <% } %>
                  <% }); %>
                  <% avgRating = (i/j).toFixed(1) %>
                <% } %>
                <% if(isNaN(avgRating) || avgRating == 0){ %>
                <% avgRating=0 %>
                <% } %>
                <div class="card" style='border-radius: 1rem;'>
                  <div>
                    <img src='<%= item.image %>' height="200px" width="100%" style="object-fit: cover;">
                    <% var showRate; %>
                    <% if(avgRating == 0){ %>
                      <% showRate=' No Rate' %>
                      <% } else { %>
                      <% showRate = avgRating + ' / 5.0' %>
                      <% } %>
                    <i class="fas fa-star" style='color: orange; position: relative;top:-13.5rem;left: 14rem;' title='<%= showRate %>'></i>
                  </div>
                  <div>
                    <p>Name :<%= item.name %></p>
                    <p>Stock : <%= item.stock %></p>
                    <p>Price :<%= item.price %>à¸¿</p>
                  </div>
                </div>
                <div>
                  <a href = '/show/<%= item._id%>' style="border:0.1rem solid black; padding:0.1rem 0.2rem; background-color:rgb(81, 255, 0); position: relative;left: -1rem;top:1.3rem;">View</a>
                  <a href='/seller/edit/<%= item._id%>' style="border:0.1rem solid black; padding:0.1rem 0.2rem; background-color:rgb(255, 234, 49); position: relative;left: -4.05rem;top:3.2rem;">Edit</a>
                  <form onsubmit="if(!confirm('yes/no?')){return false;}" action='/seller/delete/<%= item._id%>' method="post">
                    <button type='submit' style="background-color:red; position: relative;left: -1.05rem;top:3rem;">Delete</button>
                  </form>
                </div>
              <% }); %>
            </div>
        <% } %>
    </div>
</div>










